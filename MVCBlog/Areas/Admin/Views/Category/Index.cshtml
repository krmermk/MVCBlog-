
@{
    ViewBag.Title = "Index";
}

@model List<MVCBlog.Areas.Admin.Models.DTO.CategoryVM>


<section class="content-header">
    <h1>Kategoriler</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Anasayfa</a></li>
        <li class="active">Kategoriler</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <a class="btn btn-block btn-success" href="/Admin/Category/AddCategory">Yeni Kategori Ekle</a>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Kategori ID</th>
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="a_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td><img src="~/Areas/Admin/Content/img/delete-icon.jpg" width="30" height="30" style="cursor:pointer" onclick="Delete(@item.ID)" /></td>
                                    <td><a href="/Admin/Category/UpdateCategory/@item.ID"><img src="~/Areas/Admin/Content/img/guncelle-icon.png" width="30" height="30" style="cursor:pointer" /></a></td>

                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Kategori ID</th>
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@section scripts{
    <!-- DataTables -->
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
    <script>
        function Delete(id) {
            $.ajax({
                url: "/Admin/Category/DeleteCategory/" + id,
                type: "POST",
                success: function (result) {
                    $("#a_" + id).fadeOut();
                }
            });
        }
    </script>
}


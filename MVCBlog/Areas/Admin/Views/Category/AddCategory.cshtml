
@{
    ViewBag.Title = "AddCategory";
}


@model MVCBlog.Areas.Admin.Models.DTO.CategoryVM


<section class="content-header">
    <h1>
        Kategori Ekleme Sayfası
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Anasayfa</a></li>
        <li><a href="#">Kategori</a></li>
        <li class="active"> Kategori Ekleme</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
  
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">

            @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagesWidget.cshtml")
            
            <div class="box box-primary">
                @using (Html.BeginForm())
                {
                    <div class="box-body">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Name)
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Kategori Adı" })
                            @Html.ValidationMessageFor(x=>x.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Description)
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Açıklama"})
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                }

            </div>
            <!-- /.box -->

        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <!--/.col (right) -->
    </div>
</section>
